# Database
DATABASE_URL="postgresql://username:password@localhost:5432/myblog?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:5177"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Admin User (for initial setup)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-secure-password"

# Admin Access Key (安全入口密钥，访问后台需要 /admin/login/xxx)
# 留空则不启用安全入口
NEXT_PUBLIC_ADMIN_ACCESS_KEY="your-secret-access-key"

# Email (Resend) - 用于评论通知
RESEND_API_KEY="re_xxxxxxxxxxxx"

# Site URL (用于邮件中的链接)
NEXT_PUBLIC_SITE_URL="https://blog.vixenahri.cn"

# Cron Secret (可选，用于定时发布任务验证)
CRON_SECRET="your-cron-secret"
